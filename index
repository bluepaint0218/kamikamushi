                        <div class="flex-1 flex flex-col justify-center gap-1 text-lg font-bold leading-tight">
                            <div>名称: 乌萨奇</div>
                            <div>分类: 疯狂宝可梦</div>
                            <div>身高: 0.4m</div>
                            <div>体重: 3.0kg</div>
                        </div>
                    </div>

                    <div class="mt-4 bg-white border-4 border-[#303841] p-3 rounded flex-1 shadow-inner">
                        <p class="text-lg leading-6">
                            经常发出"哈？"或者"呜拉"的奇怪叫声。喜欢吃东西，动作非常敏捷，性格自由奔放。
                        </p>
                    </div>
                    <div class="text-center mt-2 animate-pulse text-sm font-bold">按 A 键 重新开始</div>
                </div>

            </div>
            
            <div class="w-full text-center mt-3">
                <span class="text-xs text-gray-500 italic font-serif opacity-50">Nintendo</span>
            </div>
        </div>

        <!-- Physical Controls -->
        <div class="w-full h-40 flex justify-between items-start px-8 relative mt-2">
            
            <!-- D-Pad -->
            <div class="d-pad w-32 h-32 relative top-2">
                <div class="absolute top-0 left-10 w-10 h-10 rounded-t-md shadow-md cursor-pointer border border-black/20" id="btn-up"></div>
                <div class="absolute bottom-0 left-10 w-10 h-10 rounded-b-md shadow-md cursor-pointer border border-black/20" id="btn-down"></div>
                <div class="absolute top-10 left-0 w-10 h-10 rounded-l-md shadow-md cursor-pointer border border-black/20" id="btn-left"></div>
                <div class="absolute top-10 right-0 w-10 h-10 rounded-r-md shadow-md cursor-pointer border border-black/20" id="btn-right"></div>
                <div class="absolute top-10 left-10 w-10 h-10 bg-[#333]"></div>
                <div class="absolute top-[45px] left-[45px] w-2 h-2 bg-[#222] rounded-full opacity-50"></div>
            </div>

            <!-- Select/Start -->
            <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 flex gap-4">
                <div class="flex flex-col items-center">
                    <button id="btn-select" class="select-start w-14 h-5 rounded-full cursor-pointer mb-1 border border-black/20"></button>
                    <span class="text-[10px] font-bold text-indigo-200 uppercase tracking-wider opacity-70">Select</span>
                </div>
                <div class="flex flex-col items-center">
                    <button id="btn-start" class="select-start w-14 h-5 rounded-full cursor-pointer mb-1 border border-black/20"></button>
                    <span class="text-[10px] font-bold text-indigo-200 uppercase tracking-wider opacity-70">Start</span>
                </div>
            </div>

            <!-- A/B Buttons -->
            <div class="w-40 h-32 relative">
                <div class="absolute top-4 right-2 flex flex-col items-center group">
                    <button id="btn-a" class="action-btn w-14 h-14 rounded-full bg-gray-200 text-gray-500 font-bold text-2xl flex items-center justify-center cursor-pointer z-10 border border-black/10">A</button>
                    <span class="text-xs font-bold text-indigo-200 mt-1 opacity-70 group-active:opacity-100">A</span>
                </div>
                <div class="absolute top-14 left-4 flex flex-col items-center group">
                    <button id="btn-b" class="action-btn w-14 h-14 rounded-full bg-gray-200 text-gray-500 font-bold text-2xl flex items-center justify-center cursor-pointer z-10 border border-black/10">B</button>
                    <span class="text-xs font-bold text-indigo-200 mt-1 opacity-70 group-active:opacity-100">B</span>
                </div>
            </div>
        </div>
    </div>

    <div class="absolute bottom-2 text-gray-500/50 text-xs text-center font-mono">
        [Z]=A  [X]=B  [Arrows]=Move  [Enter]=Start
    </div>

    <script>
        /* --- AUDIO SYSTEM --- */
        const AudioContext = window.AudioContext || window.webkitAudioContext;
        let audioCtx;
        let masterGain;

        function initAudio() {
            if (!audioCtx) {
                audioCtx = new AudioContext();
                masterGain = audioCtx.createGain();
                masterGain.gain.value = 0.25;
                masterGain.connect(audioCtx.destination);
                document.getElementById('power-led').classList.add('on');
            }
            if (audioCtx.state === 'suspended') audioCtx.resume();
        }

        function playTone(freq, type, duration, time = 0, vol = 0.2) {
            if(!audioCtx) return;
            const osc = audioCtx.createOscillator();
            const gain = audioCtx.createGain();
            osc.type = type;
            osc.frequency.setValueAtTime(freq, audioCtx.currentTime + time);
            gain.gain.setValueAtTime(vol, audioCtx.currentTime + time);
            gain.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + time + duration);
            osc.connect(gain);
            gain.connect(masterGain);
            osc.start(audioCtx.currentTime + time);
            osc.stop(audioCtx.currentTime + time + duration);
        }

        function playNoise(duration) {
            if(!audioCtx) return;
            const bufSize = audioCtx.sampleRate * duration;
            const buf = audioCtx.createBuffer(1, bufSize, audioCtx.sampleRate);
            const data = buf.getChannelData(0);
            for(let i=0; i<bufSize; i++) data[i] = Math.random()*2-1;
            
            const node = audioCtx.createBufferSource();
            node.buffer = buf;
            const gain = audioCtx.createGain();
            gain.gain.value = 0.2;
            gain.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + duration);
            node.connect(gain);
            gain.connect(masterGain);
            node.start();
        }

        const sfx = {
            select: () => playTone(1200, 'square', 0.05),
            cursor: () => playTone(400, 'square', 0.05),
            cancel: () => playTone(300, 'sawtooth', 0.15),
            hit: () => { playNoise(0.1); playTone(100, 'sawtooth', 0.1); },
            photo: () => { playNoise(0.05); playTone(2000, 'sine', 0.05, 0.05); },
            heal: () => { playTone(400, 'sine', 0.1); playTone(600, 'sine', 0.1, 0.1); playTone(800, 'sine', 0.2, 0.2); },
            run: () => { playTone(150, 'sawtooth', 0.1); playTone(100, 'sawtooth', 0.1, 0.1); },
            cry: () => {
                playTone(600, 'triangle', 0.1);
                playTone(1200, 'sine', 0.2, 0.1);
                playTone(500, 'square', 0.4, 0.25);
            },
            catchSuccess: () => {
                [523, 659, 783, 1046, 0, 783, 1046].forEach((f, i) => {
                    if(f>0) playTone(f, 'square', 0.12, i*0.12);
                });
            },
            dex: () => {
                 playTone(1200, 'sine', 0.1, 0);
                 playTone(1200, 'sine', 0.1, 0.1);
                 playTone(1800, 'square', 0.3, 0.2);
            }
        };

        /* --- GAME LOGIC --- */
        const State = { START: 0, TEXT: 1, MAIN: 2, MOVES: 3, BAG: 4, ANIM: 5, DEX: 6 };
        let curState = State.START;
        let menuCursor = 0; 
        let subCursor = 0;
        let pHP = 20, eHP = 20;
        let throwCount = 0; 
        let netCount = 3; // 物品数量
        
        const ui = {
            start: document.getElementById('start-screen'),
            battle: document.getElementById('battle-scene'),
            dex: document.getElementById('dex-screen'),
            text: document.getElementById('dialogue-text'),
            actionMenu: document.getElementById('action-menu'),
            moveMenu: document.getElementById('move-menu'),
            bagMenu: document.getElementById('bag-menu'),
            menuC: document.getElementById('menu-cursor'),
            moveC: document.getElementById('move-cursor'),
            bagC: document.getElementById('bag-cursor'),
            eHpBar: document.getElementById('enemy-hp'),
            pHpBar: document.getElementById('player-hp'),
            pSprite: document.getElementById('player-sprite'),
            eSprite: document.getElementById('enemy-sprite'),
            net: document.getElementById('catch-net'),
            ball: document.getElementById('pokeball'),
            flash: document.getElementById('flash-overlay'),
            netCount: document.getElementById('net-count')
        };

        function msg(text, cb) {
            curState = State.TEXT;
            ui.actionMenu.classList.add('hidden');
            ui.moveMenu.classList.add('hidden');
            ui.bagMenu.classList.add('hidden');
            ui.text.innerHTML = "";
            
            let i = 0;
            const timer = setInterval(() => {
                ui.text.textContent += text[i];
                i++;
                if(i >= text.length) {
                    clearInterval(timer);
                    setTimeout(() => {
                        if(cb) cb();
                    }, 1000);
                }
            }, 30);
        }

        function updateHP() {
            ui.pHpBar.style.width = (pHP/20)*100 + "%";
            ui.pHpBar.style.backgroundColor = pHP < 5 ? '#ff4757' : '#4cd137';
            ui.eHpBar.style.width = (eHP/20)*100 + "%";
            ui.eHpBar.style.backgroundColor = eHP < 5 ? '#ff4757' : '#4cd137';
        }

        function initBattle() {
            ui.start.classList.add('hidden');
            ui.battle.classList.remove('hidden');
            ui.battle.style.display = 'flex';
            sfx.cry();
            throwCount = 0;
            netCount = 3;
            ui.netCount.textContent = "x" + netCount;
            pHP = 20; eHP = 20; updateHP();
            ui.eSprite.classList.remove('hidden');
            ui.eSprite.style.opacity = 1;
            msg("野生的 乌萨奇 跳出来了!", () => {
                msg("去吧! 小八!", () => {
                    toMainMenu();
                });
            });
        }

        function toMainMenu() {
            curState = State.MAIN;
            ui.text.textContent = "小八 要做什么?";
            ui.actionMenu.classList.remove('hidden');
            menuCursor = 0;
            renderCursor();
        }

        function renderCursor() {
            if(curState === State.MAIN) {
                const row1 = "25%"; const row2 = "75%";
                const col1 = "8px"; const col2 = "50%";
                ui.menuC.style.top = (menuCursor < 2) ? row1 : row2;
                ui.menuC.style.left = (menuCursor % 2 === 0) ? col1 : col2;
            }
            else if(curState === State.MOVES) {
                const top = (subCursor < 2) ? "32px" : "82px";
                const left = (subCursor % 2 === 0) ? "10px" : "160px";
                ui.moveC.style.top = top;
                ui.moveC.style.left = left;
            }
            else if(curState === State.BAG) {
                const top = (30 + subCursor * 36) + "px";
                ui.bagC.style.top = top;
                ui.bagC.style.left = "12px";
            }
        }

        function enemyAction() {
            curState = State.ANIM;
            setTimeout(() => {
                const skills = ["怪叫", "疯狂乱挥"];
                const sk = skills[Math.floor(Math.random()*2)];
                msg(`乌萨奇 使用了 ${sk}!`, () => {
                    ui.eSprite.classList.add('animate-tackle');
                    sfx.hit();
                    setTimeout(() => {
                        ui.eSprite.classList.remove('animate-tackle');
                        ui.pSprite.classList.add('animate-damage');
                        pHP = Math.max(0, pHP - 3);
                        updateHP();
                        setTimeout(() => {
                            ui.pSprite.classList.remove('animate-damage');
                            if(pHP <= 0) {
                                msg("小八 倒下了...", () => location.reload());
                            } else {
                                toMainMenu();
                            }
                        }, 500);
                    }, 500);
                });
            }, 500);
        }

        function useMove() {
            if(subCursor === 3) { // Return
                ui.moveMenu.classList.add('hidden');
                toMainMenu();
                return;
            }
            
            curState = State.ANIM;
            ui.moveMenu.classList.add('hidden');
            const moves = ["讨伐", "拍照", "煮饭"];
            const mName = moves[subCursor];

            msg(`小八 使用了 ${mName}!`, () => {
                if(mName === "讨伐") {
                    ui.pSprite.classList.add('animate-tackle');
                    setTimeout(() => sfx.hit(), 200);
                } 
                else if(mName === "拍照") {
                    ui.flash.classList.add('animate-flash');
                    sfx.photo();
                }
                else if(mName === "煮饭") {
                    ui.pSprite.classList.add('animate-bounce');
                    sfx.heal();
                }

                setTimeout(() => {
                    ui.pSprite.classList.remove('animate-tackle');
                    ui.pSprite.classList.remove('animate-bounce');
                    ui.flash.classList.remove('animate-flash');
                    
                    if(mName === "煮饭") {
                        pHP = Math.min(20, pHP + 5);
                        updateHP();
                        msg("小八 回复了体力!", enemyAction);
                    } else {
                        ui.eSprite.classList.add('animate-blink');
                        if(mName === "讨伐") ui.eSprite.classList.add('animate-damage');
                        
                        let dmg = (mName === "讨伐") ? 5 : 2;
                        eHP = Math.max(0, eHP - dmg);
                        updateHP();
                        
                        setTimeout(() => {
                            ui.eSprite.classList.remove('animate-blink');
                            ui.eSprite.classList.remove('animate-damage');
                            
                            if(eHP <= 0) {
                                ui.eSprite.classList.add('hidden');
                                msg("乌萨奇 晕倒了!", () => {
                                    sfx.catchSuccess();
                                    msg("赢了! 获得 50 经验值!", () => setTimeout(() => location.reload(), 2000));
                                });
                            } else {
                                enemyAction();
                            }
                        }, 500);
                    }
                }, 500);
            });
        }

        function tryCatch() {
            if(subCursor === 1) { // Empty item
                msg("这里面是空的!");
                setTimeout(() => {
                    ui.bagMenu.classList.add('hidden');
                    toMainMenu();
                }, 1000);
                return;
            }
            
            if(netCount <= 0) {
                msg("没有讨伐网了!");
                setTimeout(() => {
                    ui.bagMenu.classList.add('hidden');
                    toMainMenu();
                }, 1000);
                return;
            }

            curState = State.ANIM;
            ui.bagMenu.classList.add('hidden');
            
            netCount--;
            ui.netCount.textContent = "x" + netCount;
            throwCount++;
            
            msg(`小八 扔出了 讨伐网! (剩余:${netCount})`, () => {
                // Throw Animation (Net)
                ui.net.classList.remove('hidden');
                ui.net.style.animation = "throw-net 1s forwards";
                sfx.cursor(); 

                setTimeout(() => {
                    ui.eSprite.style.opacity = 0; // Enemy sucked in
                    ui.net.classList.add('hidden'); // Hide flying net
                    
                    // Show Ball/Net on ground for shaking
                    ui.ball.classList.remove('hidden');
                    ui.ball.style.animation = "none";
                    ui.ball.style.transform = "translate(150px, 20px)";
                    
                    setTimeout(() => {
                        ui.ball.classList.add('ball-shaking');
                        sfx.hit();
                        
                        setTimeout(() => {
                            ui.ball.classList.remove('ball-shaking');
                            
                            let baseRate = (20 - eHP) * 5;
                            if(throwCount < 2) baseRate = 10; 
                            if(throwCount >= 2) baseRate += 40; 
                            
                            if(Math.random() * 100 < baseRate) {
                                ui.ball.style.filter = "brightness(0.5)";
                                sfx.catchSuccess();
                                msg("太好了! 捉到 乌萨奇 了!", () => {
                                    setTimeout(showPokedex, 1500);
                                });
                            } else {
                                ui.ball.classList.add('hidden');
                                ui.eSprite.style.opacity = 1;
                                msg("糟糕! 挣脱了!", enemyAction);
                            }
                        }, 2400);
                    }, 500);
                }, 900);
            });
        }

        function showPokedex() {
            ui.battle.classList.add('hidden');
            ui.dex.classList.remove('hidden');
            ui.dex.style.display = 'flex';
            sfx.dex();
            curState = State.DEX;
        }

        /* --- INPUT HANDLING --- */
        function input(key) {
            initAudio();
            
            if(curState === State.START) {
                if(key === 'A' || key === 'Start') initBattle();
                return;
            }
            if(curState === State.DEX) {
                if(key === 'A' || key === 'Start') location.reload();
                return;
            }

            if(curState === State.MAIN) {
                if(key === 'Right') { if(menuCursor % 2 === 0) menuCursor++; }
                if(key === 'Left') { if(menuCursor % 2 !== 0) menuCursor--; }
                if(key === 'Down') { if(menuCursor < 2) menuCursor += 2; }
                if(key === 'Up') { if(menuCursor >= 2) menuCursor -= 2; }
                
                if(key === 'A') {
                    sfx.select();
                    if(menuCursor === 0) { 
                        curState = State.MOVES; subCursor = 0; 
                        ui.moveMenu.classList.remove('hidden'); 
                    }
                    else if(menuCursor === 1) { 
                        curState = State.BAG; subCursor = 0; 
                        ui.bagMenu.classList.remove('hidden'); 
                    }
                    else if(menuCursor === 2) { 
                        msg("没有其他同伴...", toMainMenu); 
                    }
                    else if(menuCursor === 3) { 
                        sfx.run();
                        msg("在这个回合制游戏里逃不掉!", toMainMenu);
                    }
                }
                renderCursor();
            }
            else if(curState === State.MOVES) {
                if(key === 'Right') { if(subCursor % 2 === 0) subCursor++; }
                if(key === 'Left') { if(subCursor % 2 !== 0) subCursor--; }
                if(key === 'Down') { if(subCursor < 2) subCursor += 2; }
                if(key === 'Up') { if(subCursor >= 2) subCursor -= 2; }
                
                if(key === 'B') { sfx.cancel(); ui.moveMenu.classList.add('hidden'); toMainMenu(); }
                if(key === 'A') useMove();
                renderCursor();
            }
            else if(curState === State.BAG) {
                if(key === 'Up') subCursor = 0;
                if(key === 'Down') subCursor = 1;
                if(key === 'B') { sfx.cancel(); ui.bagMenu.classList.add('hidden'); toMainMenu(); }
                if(key === 'A') tryCatch();
                renderCursor();
            }
        }

        document.addEventListener('keydown', (e) => {
            const k = e.key;
            const map = {'ArrowUp':'Up', 'ArrowDown':'Down', 'ArrowLeft':'Left', 'ArrowRight':'Right', 'z':'A', 'x':'B', 'Enter':'Start'};
            if(map[k]) {
                input(map[k]);
                const btnMap = {'ArrowUp':'btn-up', 'ArrowDown':'btn-down', 'ArrowLeft':'btn-left', 'ArrowRight':'btn-right', 'z':'btn-a', 'x':'btn-b', 'Enter':'btn-start'};
                const b = document.getElementById(btnMap[k]);
                if(b) { b.classList.add('active'); setTimeout(()=>b.classList.remove('active'), 100); }
            }
        });

        ['btn-up','btn-down','btn-left','btn-right','btn-a','btn-b','btn-start','btn-select'].forEach(id => {
            const el = document.getElementById(id);
            if(!el) return;
            const k = {
                'btn-up':'Up', 'btn-down':'Down', 'btn-left':'Left', 'btn-right':'Right',
                'btn-a':'A', 'btn-b':'B', 'btn-start':'Start', 'btn-select': 'Select'
            }[id];
            el.addEventListener('touchstart', (e) => { e.preventDefault(); el.classList.add('active'); input(k); });
            el.addEventListener('touchend', (e) => { e.preventDefault(); el.classList.remove('active'); });
            el.addEventListener('mousedown', () => { el.classList.add('active'); input(k); });
            el.addEventListener('mouseup', () => { el.classList.remove('active'); });
        });

    </script>
</body>
</html>
